unit uDeletarEstud;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, uDB, uEstudante;

type
  TFormDeletar = class(TForm)
    Panel1: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    EditCodigo: TEdit;
    Deletar: TButton;
  private
    { Private declarations }
  public
   procedure DeletarEstudante(Estudante: TEstudante);

  end;

var
  FormDeletar: TFormDeletar;

implementation

{$R *.dfm}

procedure TFormDeletar.DeletarEstudante(Estudante: TEstudante);
begin
  var id, nome: String;
 id := EditCodigo.Text;


 DataModule1.FDQueryEstudante.SQL.Text := 'DELETE FROM estudantes WHERE id = ' + id;
 DataModule1.FDQueryEstudante.ExecSQL;
 ShowMessage('Estudante Deletado Com Sucesso!');

 FormDeletar.Close;
end;

end.
