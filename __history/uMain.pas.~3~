unit uMain;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm2 = class(TForm)
    PanelMenu: TPanel;
    BtnEstudantes: TButton;
    BtnProfessores: TButton;
    BtnDisciplinas: TButton;
    BtnTurmas: TButton;
    BtnMatriculas: TButton;
    LableMenu: TLabel;
    procedure BtnEstudantesClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;


implementation
  uses
  uMenuEstudantes;


{$R *.dfm}

procedure TForm2.BtnEstudantesClick(Sender: TObject);
begin
  if not Assigned(FormEstudantes) then
    Application.CreateForm(TFormEstudantes, FormEstudantes);

  FormEstudantes.ShowModal;
end;


end.

